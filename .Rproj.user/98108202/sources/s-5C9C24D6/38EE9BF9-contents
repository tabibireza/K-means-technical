seg_data <- read.csv(file = "booking.csv",row.names=1)
head(seg_data)

# standardization
std_seg_data <- scale(seg_data[,c("staff", "Facilities", "cleanliness", "comfort", 
                                  "value.of.money", "Location", "Free.Wifi")])

#  algorithm works on our data for 3 segments
set.seed(1990)
hot_Cluster3 <-kmeans(std_seg_data, 3, iter.max=100,nstart=100)
hot_Cluster3

